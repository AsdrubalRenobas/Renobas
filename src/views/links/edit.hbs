<div class="contact-wrapper animated bounceInUp">
    <div class="contact-form">
        <h3>Cambia los datos de tu Recolecta</h3>
        <!-- Recolecta Seleccionada por ID -->
        <form action="/links/edit/{{link.id}}" class="fomulario" method="POST" onsubmit="return validar();">
            <p>
                <label>Recolecta</label>
                <select class="barrio" name="title" id="title">
                    <option hidden selected>{{link.title}}</option>
                    <option>Metales</option>
                    <option>Plásticos</option>
                    <option>Papel</option>
                    <option>Tecnológicos</option>
                    <!-- <option>Otros Importantes</option> -->
                    <option>De todo</option>
                </select>

            </p>
            <p>
                <label>¿A nombre de Quien?</label>
                <input type="text" name="encargado" id="encargado" class="encargado"
                    placeholder="{{link.encargado}} Era el/la Encargado@" value="{{link.encargado}}">
            </p>
            <p>
                <label>Número telefónico</label>
                <input type="text" name="tel" id="tel" class="tel"
                    placeholder="{{link.tel}} Era el número de {{link.encargado}}" value="{{link.tel}}">
            </p>
           <p>
                <label>Dirección</label>
                <input id="barrio" type="text" name="barrio" class="barrio"
                    placeholder="La dirección era la {{link.barrio}}" value="{{link.barrio}}">
            </p>
            <p class="block">
                <label>Materiales/Elementos</label>
                <textarea name="description" class="descrip" id="description" rows="2"
                    placeholder="Escribe los materiales que tienes para la recolección. ejemplo: Botellas plasticas, Aluminio, llantas, aceite, Libros, periocos">{{link.description}}</textarea>
            </p>
            <p class="block">
                <button>
                    Actualizar Recolecta
                </button>
            </p>
        </form>
    </div>
    <div class="contact-info">
        <p><a class="atras" href="/links">No quiero cambiar Nada</a></p>
        <h4 class="titulo2">Proceso de Cambio</h4>
        <ul class="infor">
            <p>{{user.username}} Cambia la toda la información que quieras, sin dejar campos vacíos.</p>
            <p>Puedes hacer tus preguntas por medio de:</p>
            <li><i class="fab fa-whatsapp"></i> +57 3246461388</li>
            <li><i class="fas fa-envelope-open-text"></i> cultura@renobas.com</li>
        </ul>
        <p class="info">Después te contactaremos por mensaje, acordamos un día en específico y recolectamos tus
            materiales.</p>
        <p class="info">¡GRACIAS POR HACER PARTE DE LA CULTURA RENOBAS! </p>
    </div>
</div>
<script>
    //Validaciones JS
    function validar() {
        //Aca también. 
        var title, encargado, tel, barrio, description, expresion;
        title = document.getElementById("title").value;
        encargado = document.getElementById("encargado").value;
        tel = document.getElementById("tel").value;
        barrio = document.getElementById("barrio").value;
        description = document.getElementById("description").value;

        if (title === "" || encargado === "" || tel === "" || barrio === "" || description === "") {
            swal.fire({
                title: "FALTAN",
                text: "DATOS POR LLENAR",
                timer: 3000,
                showConfirmButton: false
            })
            return false;
        }
        else if (encargado.length > 30) {
            swal.fire({
                title: "Nombre",
                text: "ES MUY EXTENSO",
                timer: 3000,
                showConfirmButton: false
            })
            return false;
        }
        else if (tel.length > 10 || tel.length < 7) {
            swal.fire({
                title: "Teléfono",
                text: "NO ES VALIDO",
                timer: 3000,
                showConfirmButton: false
            })
            return false;
        }
        else if (isNaN(tel)) {
            swal.fire({
                title: "Teléfono",
                text: "NO ES VALIDO",
                timer: 3000,
                showConfirmButton: false
            })
            return false;
        }
    }
</script>